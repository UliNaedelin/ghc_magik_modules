<gui>
    <menu name="menubar" type="menubar">
	<submenu name="file" mnemonic_id="file_m">
	    <action name="connect" mnemonic_id="connect_m"/>
	    <action name="disconnect" mnemonic_id="disconnect_m"/>
	    <separator/>
	    <action name="only_connected"/>
	    <action name="filter_view_configuration"/>
	    <separator/>
	    <action name="refresh"/>
	    <separator/>
	    <action name="exit" mnemonic_id="exit_m"/>
	</submenu>
<!--	<submenu name="style" mnemonic_id="style_m">
	  
	</submenu>-->

	<submenu name="help" mnemonic_id="help_m">
	    <action name="help" mnemonic_id="help_m"/>
	</submenu>
    </menu>
    <toolbar name="filter">
	<action name="only_connected"/>
	<action name="filter_view_configuration"/>
    </toolbar>
    <toolbar name="vm_view_selection">
	<action name="vm_module"/>
	<action name="vm_view_configuration"/>
	
    </toolbar>
    <toolbar name="connection">
	<action name="connect"/>
	<action name="disconnect"/>
    </toolbar>
    <toolbar name="other">
	<action name="refresh"/>
    </toolbar>
    <dock name="top">


	<toolbar name="connection"/>
	<toolbar name="filter"/>
	<toolbar name="other"/>
	<section />
	<toolbar name="vm_view_selection"/>
    </dock>
	    
    <work_area>
	<plugin plugin_name="ghc_ca_lovion_tree" width="300"/>
    </work_area>
    <statusbar name="default">
	<pane id="status_info" style="innie" width="150" 
	      springy="true"/>
    </statusbar>
</gui>