<?xml version="1.0" encoding="Windows-1252" ?>

<!-- GUI configuration for floating map windows  -->
<!-- Inherit from super -->
<gui base="ipa_application.floating_map_gui">

  <!-- Add GHC Content Filter-specific actions at the end of the context-menu. -->

  <menu path="default_popup">
    <super/>
    <separator/>
    <submenu name="cf_content_filter" mnemonic_id="cf_content_filter_m">
